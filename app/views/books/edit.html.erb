<div class="container">
  <div class="row">

  	<div class="col-lg-3">
  	</div>

  	<div class="col-lg-6">

<h1 class="pl-3">Editing Book</h1>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <h3><%= pluralize(@book.errors.count, "error") %> :</h3>
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
  <% end %>
  <label for="book_title">Title</label>
  <%= f.text_field :title, class: "btn-block" %>
  <h6 class="pt-2">Opinion</h6>
  <%= f.text_area :body, class: "btn-block" %><br><br>
  <%= f.submit 'Update Book', class: "btn btn-primary btn-block" %>
<% end %>

<div class="pl-3 pt-2">
  <%= link_to "Show", book_path(@book) %> |
  <%= link_to "Back", books_path %>
 </div>

    </div>

