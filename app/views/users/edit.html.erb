<h2>User info</h2>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <h3><%= pluralize(@user.errors.count, "error") %> :</h3>
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
  <% end %>
    <h6 class="mt-4">Name</h6>
    <%= f.text_field :name %>
    <h6 class="mt-4">Image</h6>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <h6 class="mt-4">Introduction</h6>
    <%= f.text_area :introduction %><br>
    <%= f.submit 'Update User' %>
<% end %>